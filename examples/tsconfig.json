{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": ["DOM", "ESNext"],
		"moduleResolution": "Node",
		"declaration": true,
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"module": "ESNext",
		"outDir": "dist/types",
		"emitDeclarationOnly": true,
	},
	"include": ["./*.ts", "@swrf/core"],
	"ts-node": {
		"transpileOnly": true
	}
}
