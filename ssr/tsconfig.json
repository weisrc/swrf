{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": ["DOM"],
		"moduleResolution": "Node",
		"declaration": true,
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"module": "CommonJS",
		"outDir": "build"
	},
	"include": ["./src", "old/Node.ts", "old/NodeList.ts", "old/Node.ts"],
}
