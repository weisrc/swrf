{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": ["DOM", "ESNext"],
		"moduleResolution": "Node",
		"declaration": true,
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"module": "ESNext",
		"outDir": "types",
		"emitDeclarationOnly": true,
		"jsx": "react"
	},
	"include": ["./src"],
	"ts-node": {
		"transpileOnly": true
	}
}
